<div id="category-header">
    <div class="container" style="background: url({{data.category.image}}) no-repeat 100% 50%;">
        <div class="row">
            <div class="col-md-7 col-xs-12">
                <h1>{{data.category.name}}</h1>
                <p class="lead">{{data.category.subtitle}}</p>
            </div>
        </div>
    </div>
</div>
<div id="category-content">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-md-9">
                <div class="blog">
                    {{# each data.posts.results}}
                    <div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post">
                        <h2><a href="{{postUrl ../data.category.name slug}}">{{{title}}}</a></h2>
                        <p>{{{content.extended}}}</p>
                        <p class="read-more"><a href="{{postUrl ../data.category.name slug}}">Read more...</a></p>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{>pagination}}
    </div>
</div>
